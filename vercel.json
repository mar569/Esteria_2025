{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "VITE_TWILIO_ACCOUNT_SID": "@twilio_account_sid",
    "VITE_TWILIO_AUTH_TOKEN": "@twilio_auth_token",
    "VITE_TWILIO_PHONE_NUMBER": "@twilio_phone_number",
    "VITE_ADMIN_PHONE_NUMBER": "@admin_phone_number",
    "VITE_GA4_MEASUREMENT_ID": "@ga4_measurement_id"
  }
}